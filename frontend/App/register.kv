            id:email
            hint_text: "Email"
            size_hint_y: .75
            pos_hint: {"center_x": .43 ,"center_y": .5}
            background_color:1,1,1,0
            foreground_color:rgba(0,0,59,255)
            font_size:"14sp"
            cursor_width:"2sp"
            multiline:False
            email:True
