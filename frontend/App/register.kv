    Button:
        text: "Sign-Up"
        size_hint: .66,.065
        pos_hint: {"center_x":.5,"center_y":.10}
        background_color:0,0,0,0
        on_release:
            app.signup_process(email.text,national_id.text,phonenumber.text,dob.text,password.text,passcode.text,)
        canvas.before:
            Color:
                rgb: rgba(225,76,76,255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [5]
    MDTextButton:
        text: "Already have an account"
        pos_hint:{"center_x": .5,"center_y": .05}
        color: rgba(225,76,76,255)
        font_size:"12sp"
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "login"


       






             
             

   